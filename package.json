{
  "name": "taflex-ts",
  "version": "1.0.0",
  "description": "Enterprise Test Automation Framework in TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "npx bddgen && playwright test",
    "test:bdd": "npx bddgen && playwright test --project=bdd",
    "test:web": "playwright test --project=chromium",
    "test:unit": "vitest run",
    "test:contract": "vitest run tests/contract",
    "mcp": "node dist/mcp/server.js",
    "pact:publish": "pact-broker publish ./pacts --broker-base-url $PACT_BROKER_URL --broker-token $PACT_BROKER_TOKEN",
    "pact:verify": "node ./scripts/pact-verify.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "./docs.sh",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "test",
    "automation",
    "playwright",
    "webdriverio",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.58.2",
    "allure-playwright": "^3.4.5",
    "axios": "^1.13.5",
    "dotenv": "^17.2.4",
    "mysql2": "^3.17.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "webdriverio": "^9.24.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@pact-foundation/pact": "^16.2.0",
    "@reportportal/agent-js-playwright": "^5.4.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "allure-commandline": "^2.36.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
